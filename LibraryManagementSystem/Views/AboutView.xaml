<UserControl x:Class="LibraryManagementSystem.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Header -->
            <TextBlock Text="About" 
                      Style="{StaticResource HeaderText}"
                      Margin="0,0,0,30"/>

            <!-- Application Information -->
            <materialDesign:Card Padding="30" 
                               Margin="0,0,0,30"
                               materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20">
                        <materialDesign:PackIcon Kind="Library" 
                                               Width="64" Height="64" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               Margin="0,0,20,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Library Management System" 
                                     FontSize="28" 
                                     FontWeight="Bold"
                                     Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBlock Text="Version 1.0.0" 
                                     FontSize="16" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="A comprehensive library management solution designed to streamline book borrowing, student management, and administrative tasks. Built with modern WPF technology and Material Design principles."
                             FontSize="14"
                             TextWrapping="Wrap"
                             TextAlignment="Center"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             Margin="0,0,0,20"/>

                    <!-- Features -->
                    <TextBlock Text="Key Features:" 
                             FontSize="16" 
                             FontWeight="Medium"
                             Margin="0,0,0,10"
                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <materialDesign:PackIcon Kind="Check" 
                                                       Width="16" Height="16" 
                                                       Foreground="Green"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Book Management" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <materialDesign:PackIcon Kind="Check" 
                                                       Width="16" Height="16" 
                                                       Foreground="Green"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Student Registration" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <materialDesign:PackIcon Kind="Check" 
                                                       Width="16" Height="16" 
                                                       Foreground="Green"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Borrowing & Returns" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <materialDesign:PackIcon Kind="Check" 
                                                       Width="16" Height="16" 
                                                       Foreground="Green"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Admin Controls" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <materialDesign:PackIcon Kind="Check" 
                                                       Width="16" Height="16" 
                                                       Foreground="Green"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Real-time Dashboard" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <materialDesign:PackIcon Kind="Check" 
                                                       Width="16" Height="16" 
                                                       Foreground="Green"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Modern UI Design" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- Development Team -->
            <materialDesign:Card Padding="30" 
                               Margin="0,0,0,30"
                               materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30">
                        <materialDesign:PackIcon Kind="AccountGroup" 
                                               Width="32" Height="32" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="Development Team" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Team Members Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Team Member 1 -->
                        <materialDesign:Card Grid.Row="0" Grid.Column="0" 
                                           Padding="20" 
                                           Margin="0,0,10,20"
                                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Account" 
                                                           Width="48" Height="48" 
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                           Margin="0,0,15,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Alex Johnson" 
                                                 FontSize="18" 
                                                 FontWeight="Bold"
                                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                                        <TextBlock Text="Project Lead & Backend Developer" 
                                                 FontSize="14" 
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                 FontWeight="Medium"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text=""Excellence through innovation and dedication."" 
                                         FontStyle="Italic"
                                         FontSize="12"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                         Margin="0,0,0,10"/>
                                <TextBlock Text="• Database Design &amp; Architecture" FontSize="12" Margin="0,2"/>
                                <TextBlock Text="• Business Logic Implementation" FontSize="12" Margin="0,2"/>
                                <TextBlock Text="• System Integration" FontSize="12" Margin="0,2"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Team Member 2 -->
                        <materialDesign:Card Grid.Row="0" Grid.Column="1" 
                                           Padding="20" 
                                           Margin="10,0,0,20"
                                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Account" 
                                                           Width="48" Height="48" 
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                           Margin="0,0,15,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Sarah Chen" 
                                                 FontSize="18" 
                                                 FontWeight="Bold"
                                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                                        <TextBlock Text="UI/UX Designer & Frontend Developer" 
                                                 FontSize="14" 
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                 FontWeight="Medium"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text=""Design is not just what it looks like - design is how it works."" 
                                         FontStyle="Italic"
                                         FontSize="12"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                         Margin="0,0,0,10"/>
                                <TextBlock Text="• User Interface Design" FontSize="12" Margin="0,2"/>
                                <TextBlock Text="• User Experience Optimization" FontSize="12" Margin="0,2"/>
                                <TextBlock Text="• Material Design Implementation" FontSize="12" Margin="0,2"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Team Member 3 -->
                        <materialDesign:Card Grid.Row="1" Grid.Column="0" 
                                           Padding="20" 
                                           Margin="0,0,10,20"
                                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Account" 
                                                           Width="48" Height="48" 
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                           Margin="0,0,15,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Michael Rodriguez" 
                                                 FontSize="18" 
                                                 FontWeight="Bold"
                                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                                        <TextBlock Text="Quality Assurance & Testing Lead" 
                                                 FontSize="14" 
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                 FontWeight="Medium"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text=""Quality is never an accident; it is always the result of effort."" 
                                         FontStyle="Italic"
                                         FontSize="12"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                         Margin="0,0,0,10"/>
                                <TextBlock Text="• System Testing &amp; Validation" FontSize="12" Margin="0,2"/>
                                <TextBlock Text="• Bug Tracking &amp; Resolution" FontSize="12" Margin="0,2"/>
                                <TextBlock Text="• Performance Optimization" FontSize="12" Margin="0,2"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Team Member 4 -->
                        <materialDesign:Card Grid.Row="1" Grid.Column="1" 
                                           Padding="20" 
                                           Margin="10,0,0,20"
                                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Account" 
                                                           Width="48" Height="48" 
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                           Margin="0,0,15,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Emily Davis" 
                                                 FontSize="18" 
                                                 FontWeight="Bold"
                                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                                        <TextBlock Text="Documentation &amp; Support Specialist" 
                                                 FontSize="14" 
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                 FontWeight="Medium"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text=""Good documentation is like a lighthouse in a storm."" 
                                         FontStyle="Italic"
                                         FontSize="12"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                         Margin="0,0,0,10"/>
                                <TextBlock Text="• Technical Documentation" FontSize="12" Margin="0,2"/>
                                <TextBlock Text="• User Manual Creation" FontSize="12" Margin="0,2"/>
                                <TextBlock Text="• Training &amp; Support" FontSize="12" Margin="0,2"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- Technical Information -->
            <materialDesign:Card Padding="30" 
                               materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20">
                        <materialDesign:PackIcon Kind="Information" 
                                               Width="32" Height="32" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="Technical Information" 
                                 FontSize="20" 
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Technologies Used:" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,10"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="• C# .NET 6" FontSize="14" Margin="0,2"/>
                            <TextBlock Text="• WPF (Windows Presentation Foundation)" FontSize="14" Margin="0,2"/>
                            <TextBlock Text="• Entity Framework Core" FontSize="14" Margin="0,2"/>
                            <TextBlock Text="• SQLite Database" FontSize="14" Margin="0,2"/>
                            <TextBlock Text="• Material Design in XAML" FontSize="14" Margin="0,2"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="System Requirements:" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,10"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="• Windows 10 or later" FontSize="14" Margin="0,2"/>
                            <TextBlock Text="• .NET 6 Runtime" FontSize="14" Margin="0,2"/>
                            <TextBlock Text="• 4GB RAM (minimum)" FontSize="14" Margin="0,2"/>
                            <TextBlock Text="• 100MB Storage Space" FontSize="14" Margin="0,2"/>
                            <TextBlock Text="• 1024x768 Screen Resolution" FontSize="14" Margin="0,2"/>
                        </StackPanel>
                    </Grid>

                    <Separator Margin="0,20"/>

                    <TextBlock Text="© 2024 Library Management System. All rights reserved." 
                             FontSize="12"
                             HorizontalAlignment="Center"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>
